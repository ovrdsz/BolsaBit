{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bolsabit",
  "version": "0.1.0",
  "identifier": "com.bolsabit.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "BolsaBit",
        "width": 1000,
        "height": 850,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "app-icon.png"
    ]
  }
}
